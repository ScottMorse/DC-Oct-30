doctype html
html
  head
    title World UpsideDown
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/global.css')
    link(rel='stylesheet', href='/stylesheets/index.css')
  body
    div#page-wrap
      div#topbar
      h1 World UpsideDown
      div#headerimg
      div#auths-wrap
        div#log-wrap.auth-wrap
            h2#log-title.auth-title Login
            div#log-blame.blame=logBlame
            div#log-form-wrap.auth-form-wrap
              form#log-form.auth-form(method='post' action='/login' required)
                input(type='text' placeholder='Your username' name='logUsername' required)
                input(type='password' placeholder="*******" name='logPswd')
                input.submit(type='submit' value="Login" name="submit")
        div#reg-wrap.auth-wrap
          h2#reg-title.auth-title Register
          div#reg-blame.blame=regBlame
          div#reg-form-wrap.auth-form-wrap
            form#reg-form.auth-form(method='post' action='/register')
              input(type='text' placeholder='Your username' name='regUsername' required)
              input.email(type='text' placeholder='example@email.com' name='regEmail' required)
              input.email(type='text' placeholder='example@email.com (confirm)' required)
              input(type='password' placeholder="*******" name='regPswd' required)
              input(type='password' placeholder="******* (Confirm)")
              input.submit(type='submit' value="Register" name="submit")
    script(src='/scripts/indexStatic.js')